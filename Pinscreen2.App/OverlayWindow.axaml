<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Pinscreen2.App.OverlayWindow"
        SystemDecorations="None"
        Background="#00000000"
        TransparencyLevelHint="Transparent"
        CanResize="False"
        ShowInTaskbar="False"
        Topmost="True"
        WindowStartupLocation="Manual">
    <Grid>
        <!-- Click anywhere to toggle overlay panel -->
        <Border Background="#00000000" PointerPressed="OnRootPointerPressed"/>

        <!-- Clock always visible -->
        <Border Background="#00000000" IsHitTestVisible="False">
            <TextBlock Name="ClockText"
                       Margin="16"
                       Foreground="White"
                       FontSize="72"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       TextAlignment="Center"
                       Text="--:--:--" />
        </Border>

        <!-- Overlay Panel -->
        <Border Name="OverlayBackdrop"
                Background="#80000000"
                IsVisible="False"
                PointerPressed="OnOverlayBackdropPressed">
            <Border Name="OverlayPanel"
                    Background="#222222"
                    CornerRadius="8"
                    Padding="16"
                    MaxWidth="520"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    PointerPressed="OnOverlayPanelPressed">
                <StackPanel Spacing="12">
                    <TextBlock Text="Pinscreen Options" FontSize="24" Foreground="White"/>
                    <Separator/>
                    <WrapPanel>
                        <Button Margin="0,0,8,8" Click="OnPlayPause">Play/Pause</Button>
                        <Button Margin="0,0,8,8" Click="OnNext">Next</Button>
                        <Button Margin="0,0,8,8" Click="OnRebuildQueue">Rebuild Queue</Button>
                        <Button Margin="0,0,8,8" Click="OnSetMediaFolder">Set Media Folderâ€¦</Button>
                        <Button Margin="0,0,8,8" Click="OnOpenConfig">Open Config</Button>
                        <Button Margin="0,0,8,8" Click="OnOpenCurrentFolder">Open Current Folder</Button>
                        <Button Margin="0,0,8,8" Click="OnQuit">Quit</Button>
                    </WrapPanel>
                    <TextBlock Name="StatusText" Foreground="#CCCCCC"/>
                    <TextBlock Text="Tip: click anywhere to toggle this overlay. Press Esc to close." Foreground="#CCCCCC"/>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</Window>

